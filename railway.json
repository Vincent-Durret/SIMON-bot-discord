{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
        "phases": {
            "setup": {
                "aptPkgs": [
                    "...",
                    "fontconfig"
                ]
            }
        }
    }
},
    "deploy": {
      "numReplicas": 1,
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }